        "settings": [
          {
            "type": "image_picker",
            "id": "block_image",
            "label": "Block image"
          },
          {
            "type": "text",
            "id": "main_heading",
            "label": "Main Heading"
          },
          {
            "type": "richtext",
            "id": "block_paragraph",
            "label": "Block Paragraph"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Inner Text Blocks",
        "category": "Text Description Block"
      }
    ]
  }
