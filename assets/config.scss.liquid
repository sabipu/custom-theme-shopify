  color: white;
}

.input_colours .input_select_ul li {
    border-radius: 36px;
    padding: 0;
    min-height: 36px;
    min-width: 36px;
    margin-right: 3px;
    margin-bottom: 6px;
    border: none;
    transform: scale(0.7);
    transition: transform 0.2s;
  box-shadow: #00000030 0px 4px 14px;


}

.input_colours li[data-colour=cancel], .input_colours li[data-image=cancel] {

  background-image: url(https://s3-ap-southeast-1.amazonaws.com/cdn-dilate-digital/cablesmiths/images/circle_cancel.png);
