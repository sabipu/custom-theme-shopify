.input_select_ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-wrap: wrap;
}

.input_select_ul li {
  cursor: pointer;
  background-color: #fff;
  padding: 10px 20px;
  margin: 0 10px 9px 0;
  font-size: 12px;
  border: 3px solid #dddbdd;
  transition-property: "background, border, border-color";
  transition-duration: 100ms;
  transition-timing-function: ease-in;
  text-align: center;
  line-height: 13px;
  position: relative;

  &.selected
  {
    background-color: $color-black;
    border-color: $color-black;
    



  }

  &:hover {
    cursor: pointer;
    background-color: $color-black;
    border-color: $color-black;
  }
  &.selected:after {

      display: block;
      content: '';
      width: 14px;
      height: 14px;
      background-color: $color-black;
      transform: rotate(45deg) translateX(-50%);
      position: absolute;
      bottom: -12px;
      left: 50%;
      z-index: 1;
  }

  a {
    text-decoration: none;
    color: #222;
    font-weight: normal;
    font-weight: 800;
  }


}

.input_colours_patterns li.selected a {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #000000d1;
    border-radius: 100%;
}


.input_select_subtitles li a em {
    display: block;
    color: #b9b9b9;
    font-style: normal;
    font-weight: normal;
    font-family: $font-normal;
    font-size: 10px;
}

